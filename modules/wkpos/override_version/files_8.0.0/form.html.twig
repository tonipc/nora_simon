{% extends '@!PrestaShop/Admin/Configure/AdvancedParameters/Employee/Blocks/form.html.twig' %}

{% block employee_form_rest %}
{% if employeeForm.wkpos_employee_image is defined and employeeForm.wkpos_employee_image is not null %}
<div class="form-group row">
    <label class="form-control-label">
        {{ employeeForm.wkpos_employee_image.vars.label }}
    </label>
    <div class="col-sm">
        {% if employeeForm.wkpos_employee_image.vars.action is defined and employeeForm.wkpos_employee_image.vars.action is not empty %}
        <div class="form-group">
            <img src="{{ employeeForm.wkpos_employee_image.vars.action }}" />
        </div>
        {% endif %}
        {{ form_widget(employeeForm.wkpos_employee_image) }}
    </div>
</div>
{% endif %}
{{ form_rest(employeeForm) }}
{% endblock %}
